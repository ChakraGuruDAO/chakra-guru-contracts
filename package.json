{
  "name": "chakra-guru-contracts",
  "version": "1.0.0",
  "description": "Chakra Guru DAO - smart contracts",
  "private": true,
  "author": {
    "name": "Ravil Berish",
    "email": "berish.ceo@gmail.com"
  },
  "scripts": {
    "compile": "cross-env NODE_ENV=mainnet npx hardhat compile",
    "test": "cross-env NODE_ENV=testnet npx hardhat test",
    "clean": "npx hardhat clean",
    "verify": "npx hardhat run scripts/verify.ts",
    "lint": "prettier ./test/**/*.ts --check",
    "start:node": "cross-env NODE_ENV=production npx hardhat node",
    "deploy:bsc": "cross-env NETWORK=bsc yarn deploy:custom",
    "deploy:ropsten": "cross-env NETWORK=ropsten yarn deploy:custom",
    "deploy:rinkeby": "cross-env NETWORK=rinkeby yarn deploy:custom",
    "deploy:fuji": "cross-env NETWORK=fuji yarn deploy:custom",
    "deploy:local": "cross-env NETWORK=localhost yarn deploy:custom",
    "deploy:custom": "npx hardhat run --network $NETWORK scripts/deploy.ts",
    "console:bsc": "cross-env NETWORK=bsc yarn console:custom",
    "console:ropsten": "cross-env NETWORK=ropsten yarn console:custom",
    "console:rinkeby": "cross-env NETWORK=rinkeby yarn console:custom",
    "console:fuji": "cross-env NETWORK=fuji yarn console:custom",
    "console:local": "cross-env NETWORK=localhost yarn console:custom",
    "console:custom": "npx hardhat console --network $NETWORK",
    "mnemonics": "npx mnemonics",
    "docgen": "npx hardhat docgen"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
